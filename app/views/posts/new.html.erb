<div class ="new-post">投稿内容</div>


<%= form_with model: @post, class: 'form', local: true do |f| %>
<%= render 'shared/error_messages', model: f.object %>

  <div class="form-input">
    <label class="label-title">タイトル</label>
    <%= f.text_field :title, class: 'form-title' %>

    <label class="label-conclusion">結論</label>
    <%= f.text_field :conclusion, class: 'form-conclusion' %>

    <label class="label-content">内容</label>
    <%= f.text_area :content, class: 'form-content' %>

    <label class="label-category">カテゴリー</label>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"post-category"}) %>

    <label class="label-study-time">学習時間</label>
    <%= f.collection_select(:study_time_id, StudyTime.all, :id, :name, {}, {class:"select-box", id:"post-study-time"}) %>

    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>

  <%= f.submit '投稿する', class: 'form-submit' %>
  </div>
<% end %>

</div>
