<%= render partial: "header", locals: { post: @posts } %>

<div class="contents">
  <h1>Post List</h1>
  <ul class='post-lists'>

  <% @posts.each do |post| %>
    <li class='list'>
      <h3 class='post-title'>
          <%= post.title %>
      </h3>
      <div class='post-img-content'>
        <%= link_to post_path(post.id), method: :get do %>
        <%= image_tag post.image, class: "post-img" %>
        <% end %>
      </div>
    </li> 
  <% end %>
</div>

<div class="page">
  <%= paginate @posts %>
</div>
