<header class="top-page-header">
  <div class="search-bar-contents">
    <div class="header-logo">Learning Records</div>
      <form class="search-form" action="#">
        <input class="input-box" placeholder='キーワードから探す'>
        <button class="search-button">
          <%= image_tag "search.jpg", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class="nav">
    <div class="list-left">
      <%= link_to 'New Post', new_post_path %>
    </div>
    <ul class="lists-right">
    <% if user_signed_in? %>
        <li><%= link_to current_user.name, "#", class: "user-name" %></li>
        <li><%= link_to 'Sign Out', destroy_user_session_path , method: :delete, class: "logout" %></li>
      </div>
    <% else %>
        <li><%= link_to 'Log In', new_user_session_path, class: "login" %></li>
        <li><%= link_to 'Sign Up', new_user_registration_path, class: "sign-up" %></li>
      </div>
    <% end %>
    </ul>
  </div>
</header>

<div class="main">
  <div class="main-image">
    <%= image_tag 'study.jpg', size:'1000x400' %>
  </div>
</div>

<div class="contents">
  <h1>投稿一覧</h1>
  <ul class='post-lists'>

  <% @posts.each do |post| %>
    <li class='list'>
      <h3 class='post-title'>
          <%= post.title %>
      </h3>
    <%= link_to post_path(post.id), method: :get do %>
      <div class='post-img-content'>
        <%= image_tag post.image, class: "post-img" %>
      </div>
    <% end %>
    </li>
  <% end %>
</div>
<div class="page">
  <%= paginate @posts %>
</div>
